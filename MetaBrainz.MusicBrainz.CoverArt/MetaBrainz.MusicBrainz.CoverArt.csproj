<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">

  <Import Project="..\build\NuGetPackage.props" />

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;net45;net40</TargetFrameworks>
  </PropertyGroup>

  <PropertyGroup>
    <Version>1.1.0</Version>
    <AssemblyVersion>1.1</AssemblyVersion>
    <FileVersion>1.1</FileVersion>
    <PackageReleaseNotes>
      Minor API updates.
      STYLE-980: Handle Raw/Unedited image type.
      CAA-88: Adjusted thumbnail types. Dropped Huge (huge); added Size250 (250), Size500 (500) and Size1200 (1200).
      Bumped Newtonsoft.Json to the latest version (11.0.2).
    </PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Newtonsoft.Json" Version="11.0.2" />
  </ItemGroup>

  <PropertyGroup>
    <Title>CoverArt Archive Web Service Client Library</Title>
    <Description>This package provides classes for accessing the CoverArt Archive (CAA), enabling the retrieval of cover art for music releases based on their MusicBrainz ID.</Description>
    <PackageTags>MusicBrainz album cover art archive CAA libcoverart</PackageTags>
  </PropertyGroup>

  <Import Project="..\build\NuGetPackage.targets" />

</Project>
